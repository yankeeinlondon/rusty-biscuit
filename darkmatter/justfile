set dotenv-load
set positional-arguments

BOLD := '\033[1m'
ITALIC := '\033[3m'
RESET := '\033[0m'
YELLOW2 := '\033[38;5;3m'
BLACK := '\033[30m'
RED := '\033[31m'
GREEN := '\033[32m'
YELLOW := '\033[33m'
BLUE := '\033[34m'
MAGENTA := '\033[35m'
CYAN := '\033[36m'
WHITE := '\033[37m'

default:
    @echo
    @echo "Darkmatter CLI"
    @echo "------------------------------------"
    @echo ""
    @just --list | grep -v 'default'
    @echo

# build research modules (cli, lib)
build *args="":
    @echo ""
    @echo "Build Darkmatter CLI"
    @echo "--------------------"
    @echo ""
    @cargo build -p darkmatter {{args}}

# run tests across research modules
test *args="":
    @echo ""
    @echo "Testing Darkmatter CLI"
    @echo "----------------------"
    @echo ""
    @cargo test -p darkmatter {{args}}

lint *args="":
    @echo ""
    @echo "Linting darkmatter CLI"
    @echo "----------------------"
    @echo ""
    @cargo clippy

# install the `research` binary into the executable path
install *args:
    @cargo build --release -p darkmatter
    @cargo install --path "." --locked {{args}}

# run the debug release of the Research CLI
cli *args="":
    @cargo run -p darkmatter -- {{args}}

docs:
  @cargo clean --doc && cargo doc --no-deps --lib
